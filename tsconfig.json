{
  "compilerOptions": {
    "target": "ES2020", // Target modern JavaScript
    "module": "commonjs", // Node.js module system
    "lib": ["ES2020"],
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true,
    "skipLibCheck": true, // Skip type checks on all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of input files
    "noImplicitReturns": true, // Report error when not all code paths in function return a value
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statements
    "resolveJsonModule": true, // Support importing JSON files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "isolatedModules": true, // Ensure that each file can be safely transpiled without relying on other imports
    "moduleResolution": "node", // Use Node's module resolution algorithm
    "types": ["node"], // Include typings for Node and Jest
    "sourceMap": true, // Generate source maps for easier debugging
    "baseUrl": ".", // Base directory to resolve non-relative module names
    "paths": {
      "@utils/*": ["src/utils/*"], // Aliases for cleaner imports
      "@commands/*": ["src/commands/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
